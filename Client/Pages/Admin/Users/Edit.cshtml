@page
@model Client.Pages.Admin.Users.EditModel

@{

}

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10">

            <div class=" card my-3 rounded-0 mt-5 shadow">

                <div class="card-body">
                    <div class="card mb-2 rounded-0">

                        <form method="post" class="mt-4">

                            <input type="hidden" asp-for="User.Id" />

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="m-3">
                                        <label asp-for="User.FullName" class="form-label"></label>
                                        <input asp-for="User.FullName" class="form-control rounded-0 text-center" />
                                        <span asp-validation-for="User.FullName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="m-3">
                                        <label asp-for="User.Email" class="form-label"></label>
                                        <input asp-for="User.Email" class="form-control rounded-0 text-center" />
                                        <span asp-validation-for="User.Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="m-3">
                                        <label asp-for="UserRole" class="form-label">Role</label>
                                        <select asp-for="UserRole" asp-items="Model.RoleItems" class=" form-control rounded-0 text-center form-select"></select>
                                        <span asp-validation-for="UserRole" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer d-flex justify-content-around w-100">
                                <button type="submit" class="btn mx-1 btn-outline-dark rounded-0" style="width: 50%;">Save</button>
                                <a asp-page="@Model.ReturnUrl" class="btn mx-1 btn-dark rounded-0" style="width: 50%;">Cancel</a>
                            </div>                            
                        </form>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
