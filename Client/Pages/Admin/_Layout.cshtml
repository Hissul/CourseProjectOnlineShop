<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Client.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        footer {
            height: 50px;
        }

        header {
            height: 56px;
        }
    
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow for_header">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">OnlineShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <!-- Content -->
    <div class="admin-content">
        <!-- Sidebar -->
        <div class="sidebar">
            <nav>
                <h6 class="mt-3 text-secondary">Статистика:</h6>
                <a asp-page="/Admin/Statistics/Statistic" class="@((ViewData["ActivePage"]?.ToString() == "Statistic") ? "active" : "")">Статистика</a>

                <h6 class="mt-3 text-secondary">Заказы:</h6>
                <a asp-page="/Admin/Orders/Pending" class="@((ViewData["ActivePage"]?.ToString() == "Pending") ? "active" : "")">Ожидают</a>
                <a asp-page="/Admin/Orders/Processing" class="@((ViewData["ActivePage"]?.ToString() == "Processing") ? "active" : "")">В процессе</a>
                <a asp-page="/Admin/Orders/Completed" class="@((ViewData["ActivePage"]?.ToString() == "Completed") ? "active" : "")">Завершенные</a>
                <a asp-page="/Admin/Orders/Cancelled" class="@((ViewData["ActivePage"]?.ToString() == "Cancelled") ? "active" : "")">Отмененные</a>

                <h6 class="mt-3 text-secondary">Продукты:</h6>
                <a asp-page="/Admin/Products/ChangeProduct" class="@((ViewData["ActivePage"]?.ToString() == "ChangeProduct") ? "active" : "")">Продукты</a>
                <a asp-page="/Admin/Products/AddProduct" class="@((ViewData["ActivePage"]?.ToString() == "AddProduct") ? "active" : "")">Добавить продукт</a>

                <h6 class="mt-3 text-secondary">Пользователи:</h6>
                <a asp-page="/Admin/Users/ChangeUser" class="@((ViewData["ActivePage"]?.ToString() == "ChangeUser") ? "active" : "")">Пользователи</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <main role="main">
                @if (TempData["Notification"] != null)
                {
                    <div id="notification" class="alert  alert-@TempData["NotificationType"] position-fixed bottom-0 end-0 m-3 z-3" role="alert">
                        @TempData["Notification"]
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

@*     <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Client - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
